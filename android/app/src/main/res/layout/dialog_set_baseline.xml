<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/background"
    android:orientation="vertical"
    android:padding="24dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Set Baseline"
                android:textAppearance="@style/TextAppearance.BrewLog.Headline"
                android:layout_marginBottom="16dp" />

            <!-- Consumption Input Card -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/layout_daily_baseline"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Daily Baseline (drinks)"
                app:helperText="How many drinks you typically have per day."
                style="?attr/textInputStyle"
                app:boxBackgroundMode="filled"
                app:boxBackgroundColor="@color/input_background"
                app:hintTextColor="@color/text_hint"
                android:layout_marginBottom="16dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_daily_baseline"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:textColor="@color/text_on_surface"
                    android:textColorHint="@color/text_hint" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/layout_weekly_baseline"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Weekly Baseline (drinks)"
                app:helperText="How many drinks you typically have per week."
                style="?attr/textInputStyle"
                app:boxBackgroundMode="filled"
                app:boxBackgroundColor="@color/input_background"
                app:hintTextColor="@color/text_hint"
                android:layout_marginBottom="16dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_weekly_baseline"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:textColor="@color/text_on_surface"
                    android:textColorHint="@color/text_hint" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Info Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                style="@style/Widget.BrewLog.Card">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="16dp">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginEnd="12dp"
                        android:src="@android:drawable/ic_dialog_info"
                        app:tint="@color/blue_500" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Tip: Your baseline is your typical consumption. This will be used to track your improvement over time."
                        android:textAppearance="@style/TextAppearance.BrewLog.Caption"
                        android:textColor="@color/blue_700" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_cancel"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_marginEnd="8dp"
            android:layout_weight="1"
            android:text="Cancel"
            style="@style/Widget.BrewLog.Button.Outlined" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_save"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_marginStart="8dp"
            android:layout_weight="1"
            android:text="Save"
            style="@style/Widget.BrewLog.Button" />

    </LinearLayout>

</LinearLayout> 