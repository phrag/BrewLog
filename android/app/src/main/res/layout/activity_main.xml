<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/Theme.BrewLog"
    tools:context=".MainActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/blue_500"
        android:elevation="0dp"
        android:theme="@style/Theme.BrewLog">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/blue_500"
            app:title="@string/app_name"
            app:titleTextAppearance="@style/TextAppearance.BrewLog.Title"
            app:titleTextColor="@color/white" />

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        android:paddingBottom="80dp"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <!-- Header Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Track Your Brews"
                    android:textAppearance="@style/TextAppearance.BrewLog.Headline"
                    android:textColor="@color/text_primary" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="Monitor your beer consumption and stay on track with your goals"
                    android:textAppearance="@style/TextAppearance.BrewLog.Body"
                    android:textColor="@color/text_secondary" />

            </LinearLayout>

            <!-- Beer Glass sits at top now -->

            <!-- Initial Setup CTA (shown until onboarding complete) -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_initial_setup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:text="Initial Setup"
                app:icon="@android:drawable/ic_menu_edit"
                app:iconGravity="textStart"
                app:iconPadding="8dp"
                style="@style/Widget.BrewLog.Button.Outlined"
                android:visibility="gone" />

            <!-- Beer Glass Progress -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="240dp"
                android:layout_marginBottom="24dp"
                style="@style/Widget.BrewLog.Card">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:padding="16dp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <com.brewlog.android.BeerGlassView
                            android:id="@+id/beer_glass"
                            android:layout_width="140dp"
                            android:layout_height="match_parent"
                            android:clickable="true"
                            android:focusable="true" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/beer_glass_label"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Daily goal"
                            android:textAppearance="@style/TextAppearance.BrewLog.Caption"
                            android:textColor="@color/text_secondary" />

                        <TextView
                            android:id="@+id/beer_glass_progress"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="6dp"
                            android:layout_weight="1"
                            android:text="0 / 0 drinks"
                            android:maxLines="1"
                            app:autoSizeTextType="uniform"
                            app:autoSizeMinTextSize="12sp"
                            app:autoSizeMaxTextSize="18sp"
                            app:autoSizeStepGranularity="1sp"
                            android:textAppearance="@style/TextAppearance.BrewLog.Body"
                            android:textColor="@color/text_primary" />

                        <com.google.android.material.progressindicator.LinearProgressIndicator
                            android:id="@+id/daily_goal_progress"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            app:indicatorColor="@color/green_500"
                            app:trackColor="@color/blue_50"
                            app:indicatorDirectionLinear="leftToRight"
                            app:trackThickness="8dp" />

                        <TextView
                            android:id="@+id/tv_daily_drinks_left"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="6dp"
                            android:text="— left today"
                            android:textAppearance="@style/TextAppearance.BrewLog.Caption"
                            android:textColor="@color/text_secondary" />

                        

                        <TextView
                            android:id="@+id/weekly_glass_label"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="14dp"
                            android:text="Weekly goal"
                            android:textAppearance="@style/TextAppearance.BrewLog.Caption"
                            android:textColor="@color/text_secondary" />

                        <TextView
                            android:id="@+id/weekly_glass_progress"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:layout_weight="1"
                            android:text="0 / 0 drinks"
                            android:maxLines="1"
                            app:autoSizeTextType="uniform"
                            app:autoSizeMinTextSize="12sp"
                            app:autoSizeMaxTextSize="16sp"
                            app:autoSizeStepGranularity="1sp"
                            android:textAppearance="@style/TextAppearance.BrewLog.Body"
                            android:textColor="@color/text_primary" />

                        <com.google.android.material.progressindicator.LinearProgressIndicator
                            android:id="@+id/weekly_goal_progress"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            app:indicatorColor="@color/green_500"
                            app:trackColor="@color/blue_50"
                            app:indicatorDirectionLinear="leftToRight"
                            app:trackThickness="8dp" />

                        <TextView
                            android:id="@+id/tv_weekly_drinks_left"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="6dp"
                            android:text="— left this week"
                            android:textAppearance="@style/TextAppearance.BrewLog.Caption"
                            android:textColor="@color/text_secondary" />

                        

                        

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Progress moved to its own screen -->

            <!-- Action Buttons: moved Set Goals to menu -->

            <!-- Drinks Manager Tile -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                style="@style/Widget.BrewLog.Card">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Drinks"
                            android:textAppearance="@style/TextAppearance.BrewLog.Title"
                            android:textColor="@color/text_primary" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:text="Favorites for one‑tap adding"
                            android:textAppearance="@style/TextAppearance.BrewLog.Caption"
                            android:textColor="@color/text_secondary" />

                        <HorizontalScrollView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fillViewport="false"
                            android:scrollbars="none"
                            android:layout_marginTop="8dp">
                            <com.google.android.material.chip.ChipGroup
                                android:id="@+id/quick_add_group"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:isScrollContainer="false"
                                app:singleLine="true"
                                app:singleSelection="false" />
                        </HorizontalScrollView>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:orientation="vertical">

                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/btn_add_drink_tile"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:minHeight="48dp"
                                android:minWidth="0dp"
                                android:maxLines="1"
                                android:ellipsize="end"
                                android:textAllCaps="false"
                                android:text="Add drink"
                                style="@style/Widget.BrewLog.Button" />

                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/btn_manage_drinks_tile"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:minHeight="48dp"
                                android:layout_marginTop="8dp"
                                android:minWidth="0dp"
                                android:maxLines="1"
                                android:ellipsize="end"
                                android:textAllCaps="false"
                                android:text="Manage"
                                style="@style/Widget.BrewLog.Button.Outlined" />
                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>
            <!-- Baseline/Goals buttons moved to Progress screen -->

            <!-- Beer Entries Section -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/Widget.BrewLog.Card">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_marginEnd="12dp"
                            android:src="@android:drawable/ic_menu_recent_history"
                            app:tint="@color/blue_500" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Recent Entries"
                            android:textAppearance="@style/TextAppearance.BrewLog.Title"
                            android:textColor="@color/text_primary" />

                    </LinearLayout>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recycler_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:nestedScrollingEnabled="false"
                        tools:listitem="@layout/item_beer_entry" />

                    <TextView
                        android:id="@+id/empty_state"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="24dp"
                        android:layout_marginBottom="8dp"
                        android:gravity="center"
                        android:text="@string/no_entries"
                        android:textAppearance="@style/TextAppearance.BrewLog.Body"
                        android:textColor="@color/text_secondary"
                        android:visibility="gone" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_nav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@color/surface"
        app:menu="@menu/menu_bottom"
        app:itemIconTint="@color/blue_700"
        app:itemTextColor="@color/blue_700" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>